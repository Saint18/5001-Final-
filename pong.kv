<Ball>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<Bat>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<Game>:
    ball: pong_ball
    first_player: player_left
    second_player: player_right
    
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.first_player.score)
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.second_player.score)
    
    Ball:
        id: pong_ball
        center: self.parent.center
        
    Bat:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    Bat:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
